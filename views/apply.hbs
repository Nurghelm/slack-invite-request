{{> nav}}

{{#header}}
<div class="jumbotron">
  <div class="container">
    <h1>{{blurb}}</h1>
    <p class="description">{{description}}</p>
    <div class="required">* {{required}}</div>
  </div>
</div>
{{/header}}

<div class="container">
  <form method="post" action="/apply" enctype="multipart/form-data" id="application">
    {{#form}}
      <div class="form-group">
      {{#fullName}}
        {{> field}}
      {{/fullName}}
      </div>
      <div class="form-group">
      {{#email}}
        {{> field}}
      {{/email}}
      </div>
      {{#custom}}
      <div class="form-group">
        {{> field}}
      </div>
      {{/custom}}
    {{/form}}

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>

  <div class="example">
    <p>Here's a sample screenshot, for reference:</p>
    <div class="sample-screenshot"></div>
  </div>
</div>

{{> scripts}}
